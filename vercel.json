{
  "version": 2,
  "builds": [
    {
      "src": "server/production.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["lib/**", "shared/**", "server/**"]
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/production.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/$1"
    }
  ]
}